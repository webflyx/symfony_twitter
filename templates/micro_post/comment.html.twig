{% extends 'base.html.twig' %}

{% block title %}Add comment
{% endblock %}

{% block bread %}
	-> <a href="{{ path('app_micro_post_one', {post: post.id}) }} ">{{ post.title }}</a> 
    -> Post comment
{% endblock %}

{% block body %}
	{{ include ("micro_post/_post.html.twig", {post:post}) }}

	{{ form_start(form, {"attr": {'novalidate':'novalidate'}}) }}
	<div>
		{{ form_errors(form) }}</div>

	<div>
		{{ form_label(form.text, 'Enter Comment', {'label_attr':{'class':'block text-sm text-gray-700 font-medium'}}) }}
		{{ form_widget(form.text, { 'attr': {'class': 'block w-full shadow-sm border-gray-300 mt-1 p-2'} })}}
		{{ form_errors(form.text) }}
	</div>

	<div>
		<button type="submit" class="mt-4 text-white py-2 	block w-full border-transparent bg-indigo-600 hover:bg-indigo-500">Add Comment</button>
	</div>

	{{ form_end(form) }}

{% endblock %}
