{{ include('shared/_avatar.html.twig', {size:32, profile:user.userProfile})}}
<h1 class="text-xl font-bold">{{ user.userProfile.name ?? user.email }}</h1>
{% if user.userProfile.name is defined %}
	<div class="text-gray-600">{{ user.email }}</div>
{% endif %}
{% if user.userProfile.bio is defined %}
	<div class="mt-4">{{ user.userProfile.bio }}</div>
{% endif %}
<div class="mt-4 flex gap-4 text-gray-800  gap-1">
	{% if user.userProfile.location is defined %}
		<div class="flex items-center">
			<svg width="20px" height="20px" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M12 21C15.5 17.4 19 14.1764 19 10.2C19 6.22355 15.866 3 12 3C8.13401 3 5 6.22355 5 10.2C5 14.1764 8.5 17.4 12 21Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				<path d="M12 12C13.1046 12 14 11.1046 14 10C14 8.89543 13.1046 8 12 8C10.8954 8 10 8.89543 10 10C10 11.1046 10.8954 12 12 12Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
			<span>{{ user.userProfile.location }}</span>
		</div>
	{% endif %}
	{% if user.userProfile.dateOfBirth is defined %}
		<div class="flex items-center gap-1">
			<svg width="20px" height="20px" fill="#000000" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<g id="SVGRepo_bgCarrier" stroke-width="0"></g>
				<g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
				<g id="SVGRepo_iconCarrier">
