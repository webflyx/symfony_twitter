{% extends 'base.html.twig' %}

{% block title %}Profile Settings
{% endblock %}

{% block bread %}
	-> Profile Settings
{% endblock %}

{% block body %}

	{{ include('settings_profile/_settings_profile_tabs.html.twig') }}

	<div class="flex items-center gap-10">
		{{ include('shared/_avatar.html.twig', {size:32, profile:app.user.userProfile})}}

		<div>
			{{ form_start(form, {'attr':{'novalidate':'novalidate'}})}}
			{{ form_label(form.profileImage, 'Change', {'label_attr':{'class':'text-white shadow-sm border-transparent bg-gray-300 hover:bg-gray-400 dark:bg-gray-700 dark:hover: bg-gray-900 cursor-pointer rounded-md border p-2'}})}}
			{{ form_widget(form.profileImage, {'attr':{'class': 'hidden'}})}}
			{{ form_errors(form.profileImage)}}

		</div>
	</div>
	<button type="submit" class="mt-4 text-white py-2 	block w-full border-transparent bg-indigo-600 hover:bg-indigo-500">Save Image</button>
	{{ form_end(form)}}
{% endblock %}
