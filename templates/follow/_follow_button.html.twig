{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	{% if app.user.id != userFollowTo.id %}
		{% if app.user.follows is defined and not app.user.follows.contains(userFollowTo) %}
			<a href="{{ path('app_follow', {id: userFollowTo.id}) }}" class="mt-2 block max-w-max rounded-lg px-8 py-3 text-white border-1 border-indigo-700 bg-indigo-600 hover:bg-indigo-900">Follow</a>
		{% else %}
			<a href="{{ path('app_unfollow', {id: userFollowTo.id}) }}" class="mt-2 block max-w-max rounded-lg px-8 py-3 text-white border-1 border-indigo-700 bg-indigo-600 hover:bg-indigo-900">Unfollow</a>
		{% endif %}
	{% endif %}
{% endif %}
