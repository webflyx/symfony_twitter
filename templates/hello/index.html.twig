{% extends 'base.html.twig' %}

{% block body %}

	{% if messages|length > 0 %}

		{% for key,message in messages|slice(0, limit) %}
			<div>
				<a href="{{ path('app_one_message', {id: key}) }}">{{ message.message }}</a>
			</div>
			{{ include('hello/_date_posted.html.twig') }}
		{% endfor %}

	{% else %}

		<div>Here is
			{{messages|length}}
			messages</div>

	{% endif %}

{% endblock %}
